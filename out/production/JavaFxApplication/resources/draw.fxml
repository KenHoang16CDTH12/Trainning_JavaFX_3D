<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox   fx:id="main"
        spacing="10"
        stylesheets="/resources/style/draw.css"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controllers.DrawController"
        prefHeight="400.0" prefWidth="600.0">
    <style>
        -fx-padding: 10;
        -fx-border-style: solid inside;
        -fx-border-width: 2;
        -fx-border-insets: 5;
        -fx-border-radius: 5;
        -fx-border-color: blue;
    </style>
    <children>
        <FlowPane fx:id="flowPaneDraw"
                  alignment="CENTER"
                  prefWidth="600.0"
                  prefHeight="780.0">
        </FlowPane>
        <HBox alignment="CENTER"
              spacing="10">
            <Button fx:id="btnDrawLight"
                    onAction="#drawLightAction"
                    text="Light"
                    textAlignment="CENTER"
            />
            <Button fx:id="btnDrawCylinder"
                    onAction="#drawCylinderAction"
                    text="Cylinder"
                    textAlignment="CENTER"
            />
            <Button fx:id="btnDrawBox"
                    onAction="#drawBoxAction"
                    text="Box"
                    textAlignment="CENTER"
            />
            <Button fx:id="btnDrawSphere"
                    onAction="#drawSphereAction"
                    text="Sphere"
                    textAlignment="CENTER"
            />
            <Button fx:id="btnBackground"
                    onAction="#backgroundAction"
                    text="Background"
                    textAlignment="CENTER"
            />
            <Button fx:id="btnExit"
                    onAction="#exitAction"
                    text="Exit"
                    textAlignment="CENTER"
            />
        </HBox>
    </children>
</VBox>
